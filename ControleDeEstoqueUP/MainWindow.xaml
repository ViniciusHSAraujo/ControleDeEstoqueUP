<Window x:Class="ControleDeEstoqueUP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleDeEstoqueUP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Name="miCadastros" Header="Cadastros">
                <MenuItem Header="Clientes"/>
                <MenuItem Header="Fornecedores"/>
                <Separator/>
                <MenuItem Header="Produtos"/>
                <MenuItem Header="Categorias" Click="MenuItem_Click"/>
                <MenuItem Header="Subcategorias"/>
                <MenuItem Header="Unidades"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
